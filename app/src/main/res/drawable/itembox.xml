<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorDarkGrey"
                />
            <stroke
                android:width="4dp"
                android:color="@color/colorLightGrey" />
            <corners
                android:radius="0dp"
                />
        </shape>
    </item>


    <item>
        <shape>
            <solid
                android:color="@color/colorPrimaryTran"
                />
            <stroke
                android:width="4dp"
                android:color="@color/colorDarkGrey" />
            <corners
                android:radius="0dp"
                />
        </shape>
    </item>

</selector>