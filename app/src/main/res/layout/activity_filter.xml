<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/filterlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background4"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:focusableInTouchMode="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/searchbar">
    <SearchView
        android:id="@+id/searcher"
        android:layout_height="60dp"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/boxoutlineattentiongrab"
        android:iconifiedByDefault="false"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        style="@style/button"
        android:background="@drawable/button"
        android:text="Home"
        android:textSize="20sp"
        android:id="@+id/button_home"
        />
</LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_below="@id/searchbar"
     android:layout_marginTop="5dp"
     android:baselineAligned="false"
     >
     <ListView
         android:id="@android:id/list"
         android:layout_weight="7"
         android:layout_below="@id/searcher"
         android:layout_alignParentLeft="true"
         android:layout_marginRight="10dp"
         android:paddingTop="5dp"
         android:paddingLeft="5dp"
         android:paddingRight="5dp"
         android:divider="@android:color/transparent"
         android:dividerHeight="5.0sp"
         android:background="@drawable/boxoutline"
         android:cacheColorHint="#00000000"
         android:layout_width="0dp"
         android:layout_height="fill_parent"
         android:layout_gravity="right" />

    <ScrollView
    android:layout_width="80dp"
    android:layout_height="fill_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"

        android:id="@+id/button_scroller"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/button"
        android:background="@drawable/button"
        android:layout_marginBottom="1dp"
        android:text="#/Today"
        android:textSize="10sp"
        android:id="@+id/button_today"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Tomorrow"
        android:textSize="10sp"
        android:id="@+id/button_tomorrow"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Monday"
        android:textSize="10sp"
        android:id="@+id/button_monday"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Tuesday"
        android:textSize="10sp"
        android:id="@+id/button_tuesday"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Wednesday"
        android:textSize="10sp"
        android:id="@+id/button_wednesday"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Thursday"
        android:textSize="10sp"
        android:id="@+id/button_thursday"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Friday"
        android:textSize="10sp"
        android:id="@+id/button_friday"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Saturday"
        android:textSize="10sp"
        android:id="@+id/button_saturday"
        android:onClick="setSearchFromDefaultButton"
        />

    <Button
        style="@style/button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:text="#/Sunday"
        android:textSize="10sp"
        android:id="@+id/button_sunday"
        android:onClick="setSearchFromDefaultButton"
        />
    </LinearLayout>
</ScrollView>


 </LinearLayout>
</RelativeLayout>